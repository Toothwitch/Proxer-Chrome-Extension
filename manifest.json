{
  "manifest_version": 2,
  "name": "Proxer Chrome Extension",
  "description": "Extension to access Proxer.me notifications from anywhere in your Browser!",
  "version": "0.1.2",
  "author": "Toothwitch, Sadeiko",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "window.html",
	"default_title": "Proxer.me Extension"
  },
  "background": {
	"scripts": ["bg.js"]
  },
  "permissions": [
	"*://*.proxer.me/",
	"cookies",
	"tabs",
	"notifications"
  ]
}
